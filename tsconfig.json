{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@nulladata/ui": ["packages/ui/src"],
      "@nulladata/config": ["packages/config/src"]
    }
  },
  "include": ["packages", "apps", "types", "vitest.config.ts", "prisma"],
  "exclude": ["node_modules"]
}
